alias lr='ls -lrt'
cd() { builtin cd "$@"; lk; }
alias c='clear'
alias hg='history | grep'
alias mkdir='mkdir -p'
alias rmdir='rmdir -p'
alias ..='cd ../'                               # Move up 1 dir.
alias ...='cd ../../'                           # Move up 2 dir.
alias .3='cd ../../../'                         # Move up 3 dir.
alias .4='cd ../../../../'                      # Move up 4 dir.

# CONVENIENCE FUNCTIONS
